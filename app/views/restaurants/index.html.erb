<h1>Restaurants</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.description %></td>
    <td><%= link_to 'Ver', restaurant %></td>
    <td><%= link_to 'Editar', edit_restaurant_path(restaurant) %></td>
    <td><%= link_to 'Borrar', restaurant, :confirm => 'Esta seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

